<script>
    $(document).ready(function () {
  // Load all products on page load
  loadProducts();

  // Search products on keyup event
  $("#searchInput").keyup(function () {
    var searchText = $(this).val();
    searchProducts(searchText);
  });
});

function loadProducts() {
  $.ajax({
    url: "/shop",
    method: "GET",
    success: function (response) {
      displayProducts(response);
    },
    error: function (xhr, status, error) {
      console.log("Error: " + error.message);
    },
  });
}

function searchProducts(searchText) {
  $.ajax({
    url: "/shop",
    method: "POST",
    data: { searchText: searchText },
    success: function (response) {
      displayProducts(response);
    },
    error: function (xhr, status, error) {
      console.log("Error: " + error.message);
    },
  });
}

function displayProducts(products) {
  var productList = $("#productList");
  productList.empty();
  if (products.length === 0) {
    productList.append("<p>No products found.</p>");
  } else {
    products.forEach(function (product) {
      var productItem = `
        <div class="col-lg-4 col-sm-6">
          <div class="single_product_item">
            <img src="/productImages/${product.productImages[0]}" alt="">
            <div class="single_product_text">
              <h4>${product.productName}</h4>
              <h3>$${product.price}</h3>
              <a href="/productShop?id=${product._id}">View Details</a>
              <a href="/addToCart?id=${product._id}" class="add_cart">+ add to cart<i class="ti-heart"></i></a>
            </div>
          </div>
        </div>`;
      productList.append(productItem);
    });
  }
}

</script>
   
   
