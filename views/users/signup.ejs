<%- include('../layouts/header.ejs') %>

<section class="vh-100 gradient-form d-flex justify-content-center align-items-center" style="background-color: #1e3932">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="text-black">
          <div class="row g-0 d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
              <div
                class="card-body p-md-5 mx-md-4 border border-primary "
                style="background-color: #d0d0d0; border-radius: 10px"
              >
                <div class="text-center">
                  <h4
                    class="mt-1 mb-5 pb-1"
                    style="
                      font-family: 'EB Garamond', serif;
                      font-family: 'Tilt Warp', cursive;
                    "
                  >
                    TECCAS EKART
                  </h4>
                </div>
                <div>
                  <h5
                    class="mt-1 mb-1 pb-1 ms-5"
                    style="
                      font-family: 'EB Garamond', serif;
                      font-family: 'Tilt Warp', cursive;
                    "
                  >
                    Sign Up
                  </h5>
                </div>

                <form action="/signup" method="post" class="mx-1 mx-md-4">
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input
                        type="text"
                        name="name"
                        id="form3Example1c"
                        class="form-control"
                      />
                      <label class="form-label" for="form3Example1c"
                        >Your Name</label
                      >
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input
                        type="email"
                        name="email"
                        id="form3Example3c"
                        class="form-control"
                      />
                      <label class="form-label" for="form3Example3c"
                        >Your Email</label
                      >
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input
                        type="text"
                        name="mno"
                        id="phone"
                        class="form-control"
                      />

                      <label class="form-label" for="form3Example3c"
                        >Your Mobile</label
                      >
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input
                        type="password"
                        name="pwd"
                        id="form3Example3c"
                        class="form-control"
                      />
                      <label class="form-label" for="form3Example3c"
                        >Your Password</label
                      >
                    </div>
                  </div>

                  
                    <input
                      type="submit"
                      value="Sign Up"
                      class="btn border btn-success ms-3 mt-2"
                      
                    />

                     <% if(typeof msg !== 'undefined' ){ %>
                  
                   <p style="font-size: small; color: red;font-family: 'EB Garamond', serif;" class="ms-3"> <%= msg %></p>
                  

                  <% } %> 
                 

                  <div class="mt-5 ms-4">
                    <p>
                      already have an account?
                      <a class="te" href="/login">Login Here</a>
                    </p>
                  </div>

                  
                      

                 
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
const form = document.querySelector('form');

form.addEventListener('submit', (event) => {
  event.preventDefault();
  
  const nameInput = document.querySelector('#form3Example1c');
  const emailInput = document.querySelector('#form3Example3c');
  const mnoInput = document.querySelector('#phone');
  const pwdInput = document.querySelector('#form3Example3c');
  
  const name = nameInput.value.trim();
  const email = emailInput.value.trim();
  const mno = mnoInput.value.trim();
  const pwd = pwdInput.value.trim();
  
  if (!name) {
    alert('Please enter your name');
    return;
  }
  
  if (!email) {
    alert('Please enter your email');
    return;
  }
  
  // You can add more validation here for the other inputs
  
  form.submit();
});


</script>

