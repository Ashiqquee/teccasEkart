<%- include('../layouts/header.ejs') %>

<section
  class="vh-100 gradient-form d-flex justify-content-center align-items-center"
  style="background-color: #1e3932"
>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="text-black">
          <div class="row g-0 d-flex justify-content-center align-items-center">
            <div class="col-lg-6">
              <div
                class="card-body p-md-5 mx-md-4 border border-primary"
                style="background-color: #d0d0d0; border-radius: 10px"
              >
                <div class="text-center">
                  <h4
                    class="mt-1 mb-5 pb-1"
                    style="
                      font-family: 'EB Garamond', serif;
                      font-family: 'Tilt Warp', cursive;
                    "
                  >
                    Verify Account
                  </h4>
                </div>
                <form action="/verifyOtp" method="post">
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label for="otp" class="form-label">Enter OTP</label>
                      <input
                        type="text"
                        id="otp"
                        class="form-control"
                        name="otp"
                        placeholder="Enter OTP"
                        required
                      />
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-1">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0"></div>
                  </div>
                  <button type="submit" class="btn btn-success btn-block ms-3">
                    Verify 
                  </button>
                  <button
                    type="button"
                    id="resend-otp"
                    class="btn btn-link btn-block"
                    disabled
                  >
                    Resend OTP
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function sendOTP(mobileNumber) {
    return client.verify.v2
      .services(TWILIO_SERVICE_SID)
      .verifications.create({ to: `+91${mobileNumber}`, channel: "sms" });
  }

  function resendOTP() {
    const mobileNumber = req.body.mno;
    sendOTP(mobileNumber)
      .then(() => {
        console.log(`New OTP sent to ${mobileNumber}`);
        alert("New OTP sent!");
        document.getElementById("resend-otp").disabled = true;
        setTimeout(() => {
          document.getElementById("resend-otp").disabled = false;
        }, 10000);
      })
      .catch((err) => {
        console.log(`Failed to send OTP to ${mobileNumber}: ${err}`);
        alert("Failed to send OTP. Please try again later.");
      });
  }

  document.getElementById("resend-otp").addEventListener("click", resendOTP);
</script>

