<div class="container d-flex justify-content-center mt-5 mb-5">
    <div class="col mt-5">
        <form action="/orderConfirm" method="post">
            <div class="d-flex justify-content-center" style="justify-content: start;">
                <div class="col-md-6">
                    <span><b> Payment Method</b></span>
                    <div class="card mt-3">
                        <div class="accordion" id="accordionExample">
                            <div class="card" style="justify-content: space-between;">
                                <div class="card-header p-0" id="">
                                    <h2 class="mb-0">
                                        <button
                                            class="btn btn-light btn-block text-left  p-3 rounded-0 border-bottom-custom"
                                            type="button" data-toggle="collapse" data-target="#collapseTwo"
                                            aria-expanded="false" aria-controls="collapseTwo">
                                            <div class="d-flex justify-content-between ms-2">
                                                <input class="form-check-input" type="radio" value="cashOn"
                                                    name="flexRadioDefault" id="flexRadioDefault1">
                                                <label class="form-check-label" for="flexRadioDefault1"><br><span> Cash On
                                                        Delivary</span>
                                               </label>
                                                <img src="https://i.imgur.com/7kQEsHU.png" width="30">
                                            </div>
                                        </button>
                                    </h2>
                                </div>
                            </div>
                            <div class="card" style="justify-content: space-between;">
                                <div class="card-header p-0" id="">
                                    <h2 class="mb-0">
                                        <button
                                            class="btn btn-light btn-block text-left  p-3 rounded-0 border-bottom-custom"
                                            type="button" data-toggle="collapse" data-target="#collapseTwo"
                                            aria-expanded="false" aria-controls="collapseTwo">
                                            <div class="d-flex justify-content-between ms-2">
                                                <input class="form-check-input" type="radio" value="online"
                                                    name="flexRadioDefault" id="flexRadioDefault1">
                                                <label class="form-check-label" for="flexRadioDefault1"><br><span>Razorpay</span>
                                                </label>
                                                <img src="https://i.imgur.com/7kQEsHU.png" width="30">
                                            </div>
                                        </button>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center " style="justify-content: end;">
                <div class="col-md-6">
                    <span><b> Summary</b></span>
                    <div class="card mt-3 mb-5">
                        <div class="d-flex justify-content-between p-3">
                            <div class="d-flex flex-column">
                                <span>Order Amount </span>
                            </div>
                            <div class="mt-1">
                                <h6>Rs <b>
                                        <%=Total%>
                                    </b></h6>
                            </div>
                        </div>
                        <hr class="mt-0 line">
                        <div class="p-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping Charge</span>
                                <span>Rs 40</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Total GST <i class="fa fa-clock-o"></i></span>
                                <span>3%</span>
                            </div>


                        </div>
                        <hr class="mt-0 line">
                        <% let totalPrice=0 %>
                            <% let tax=(Total*3)/100%>
                                <div class="p-3 d-flex justify-content-between">
                                    <div class="d-flex flex-column">
                                        <span><b> Grand Total</b></span>
                                        <% totalPrice=Total+tax + 40 %>
                                    </div>
                                    <sup class="super-price">
                                        <%=totalPrice%>
                                    </sup>
                                </div>
                                <div class="p-3">
                                        <button type="submit" class="btn btn-primary btn-block free-button">Proceed</button>
                                </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>