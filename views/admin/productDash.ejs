<div class="row">
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary mt-5" href="/admin/addProduct">Add new Product</a>
    </div>

    <!-- <a href="/admin/logout"><button type="button" class="btn btn-danger">Log Out Admin</button></a>         -->
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-10  mt-5">
            <table id="productTable" class="table table-striped table-bordered table-sm mt-4">
                <thead>
                    <tr style="font-family: 'EB Garamond', serif;">
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(product.length>0){ %>
                        <% for(let i=0; i<product.length; i++){ %>
                            <tr>
                                
                                <td><%= product[i].productName %></td>
                                <td><%= product[i].price %></td>
                                <td ><img style="width:80px;height:60px;" class="img-fluid" src="/productImages/<%=product[i].productImages %>"></td>
                                <td>
                                 <% if (product[i].status == 0) { %> Active <% } else if
                                 (product[i].status == 1) { %> Inactive <% } %>
                                </td>
                                <td style="font-family: 'EB Garamond', serif;">
                                    <a href="/admin/product-details?id=<%=product[i]._id %>" style="font-size: small;" class="btn btn-primary mt-1">View</a>
                                    <a href="/admin/edit-product?id=<%=product[i]._id%>" style="font-size: small;" class="btn btn-success mt-1">Edit</a>
                                    <% if(product[i].status == 0){ %>
                                        <a href="/admin/blockProduct?id=<%=product[i]._id%>"><button type="button" style="font-size: small;" class="btn btn-danger mt-1">Unlist</button></a>
                                    <% } else { %>
                                        <a href="/admin/unBlockProduct?id=<%=product[i]._id%>"><button type="button" style="font-size: small;" class="btn btn-success mt-1">List</button></a>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="5">Product Not Found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div> 
</div>





