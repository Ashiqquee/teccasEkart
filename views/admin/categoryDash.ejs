<div class="d-flex justify-content-center align-items-center mt-5">
    <a href="/admin/new-category" class="btn btn-success" >Add New Category</a>
    
</div>

<div class="d-flex justify-content-center align-items-center">

<div class="col-10 mt-5">

<table id="categoryTable" class="table table-striped table-bordered table-sm mt-4" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Action</th>
        </tr>
    </thead>

    <tbody>
        <% if(category.length > 0){ %>
            <% for(let i=0; i<category.length; i++){ %>
                <tr>
                    <td><%= category[i].name %></td>
                    <td><a class="btn btn-danger" href="/admin/deleteCategory?id=<%= category[i]._id%>" style="font-size: small;">Delete Category</a></td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="2">Categories Not found</td>
            </tr>
        <% } %>
    </tbody>
</table>
<% if(typeof message !== 'undefined' ){ %>
                  
                   <p style="font-size: small; color: red;font-family: 'Tilt Warp', cursive;" class="ms-3"> <%= message %></p>
                  

                  <% } %> 

</div>

</div>


<script>
  $(document).ready(function() {
    $('#categoryTable').DataTable();
  });
</script>
