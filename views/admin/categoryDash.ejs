</head>

<body id="one">
    <!-- navbar -->
    <section>
        <nav class="navbar navbar-expand-lg bg-black">
            <div class="container-fluid">
                <a class="navbar-brand text-white ms-5 specialCase"  href="">TECCAS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon bg-light"></span>
              </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white ms-3  specialCase"  href="/admin/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase" href="/admin/dashboard">User Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase text-decoration-underline" aria-current="page" href="">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase " href="/admin/coupon-dashboard">Coupon</a>
                        </li>
                        

                    </ul>
                    <div class="d-flex me-5" >
                        <a class="btn btn-danger" href="/logout">Logout</a>
                        

                    </div>

                </div>
            </div>
        </nav>
    </section>









<div class="d-flex justify-content-center align-items-center mt-5">
    <a href="/admin/new-category" class="btn btn-success" >Add New Category</a>
    
</div>

<div class="d-flex justify-content-center align-items-center">

<div class="col-10 mt-5">

<table id="dtBasicExample" class="table table-hover table  table-dark table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Action</th>
        </tr>
    </thead>

    <tbody>
        <% if(category.length > 0){ %>
            <% for(let i=0; i<category.length; i++){ %>
                <tr>
                    <td><%= category[i].name %></td>
                    <td><a class="btn btn-danger" href="/admin/deleteCategory?id=<%= category[i]._id%>" style="font-size: small;">Delete Category</a></td>
                </tr>
            <% } %>
        <% } else { %>
            <tr>
                <td colspan="2">Categories Not found</td>
            </tr>
        <% } %>
    </tbody>
</table>

</div>

</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
