<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>iQOO india</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="new.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="icon" href="iqlogo.jpg">


</head>

<body id="one">
    <!-- navbar -->
    <section>
        <nav class="navbar navbar-expand-lg bg-black">
            <div class="container-fluid">
                <a class="navbar-brand text-white ms-5 specialCase"  href="">TECCAS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon bg-light"></span>
              </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white ms-3  specialCase"  href="/admin/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase" href="/admin/dashboard">User Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase "  href="/admin/category-dashboard">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white ms-2 specialCase text-decoration-underline" aria-current="page" href="">Coupon</a>
                        </li>
                        

                    </ul>
                    <div class="d-flex me-5" >
                        <a class="btn btn-danger" href="/logout">Logout</a>
                        

                    </div>

                </div>
            </div>
        </nav>
    </section>







    <div class="mb-3 mt-4">
        
        <div class="d-flex justify-content-end">
            <form>
                <input class="bg-dark " type="text"  name="search">
                <input type="submit" class="btn btn-primary btn-small" value="Search">
            </form>
        </div>
    </div>
    <div class="row ">
        
             <div class="d-flex justify-content-center">
                <a class="btn btn-primary" href="/admin/new-coupon">Add new coupon</a>
             </div>
        
        <!-- <a href="/admin/logout"><button type="button" class="btn btn-danger">Log Out Admin</button></a>         -->
        <div class="d-flex justify-content-center align-items-center">
        <div class="col-10  mt-5">
            <table id="myTable" class="table table-hover table table-bordered  table-dark table-striped">

        
                
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                <%
                if(coupon.length>0){
                    for(let i=0;i<coupon.length;i++){
                     %>
                     <tr>
                                <td><%= coupon[i].couponName %></td>
                                <td><%= coupon[i].couponCode %></td>
                                
                               
                                <td><%= coupon[i].status %></td>
                                <td>
                                    <a href="/admin/coupon-details?id=<%= coupon[i]._id %>" style="font-size: small;" class="btn btn-primary mt-1">view</a>
                                    <a href="/admin/edit-coupon?id=<%= coupon[i]._id%>" style="font-size: small;" class="btn btn-success mt-1">Edit</a>
                                    <a href="/admin/delete-coupon?id=<%= coupon[i]._id %>" style="font-size: small;" class="btn btn-danger mt-1">Delete</a>
                                    <%if(coupon[i].status==0){%>
                                 
                                <a href="/admin/blockCoupon?id=<%=coupon[i]._id%>"><button type="button" style="font-size: small;" class="btn btn-danger mt-1">List</button></a>
                           <%}else{%>
                            <a href="/admin/unBlockCoupon?id=<%=coupon[i]._id%>"><button type="button" style="font-size: small;" class="btn btn-success mt-1">Unlist</button></a>
                           <%}%>
                                   
                                </td>
                            </tr>
                    <%
                      }
                } else{
                    %>
             <tr>
                 <td colspan="5">Code Not Found</td>
             </tr>
        <% } %>
                </tbody>
            </table>
            
            </div>
        </div> 
    </div>








<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>