  </head>

  <body>
    <!-- navbar -->
    <section>
      <nav class="navbar navbar-expand-lg bg-black">
        <div class="container-fluid">
          <a class="navbar-brand text-white ms-5 specialCase" href="">TECCAS</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon bg-light"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link active text-white ms-3 specialCase"
                  href="/admin/home"
                  >Home</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white ms-2 specialCase"
                  href="/admin/dashboard"
                  >User Data</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white ms-2 specialCase"
                  href="/admin/category-dashboard"
                  >Category</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link text-white ms-2 specialCase text-decoration-underline"
                  aria-current="page"
                  href=""
                  >Coupon</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link text-white ms-2 specialCase " aria-current="page" href="/admin/product-dashboard">Product</a>
